+public class FormFinancement{
+    private String VIN;
+    private double montantPret;
+    private int dureePret;
+
+    // Constructeur
+    public FormFinancement(String VIN, double montantPret, int dureePret) {
+        this.VIN = VIN;
+        this.montantPret = montantPret;
+        this.dureePret = dureePret;
+    }
+
+    // Getters et setters
+    public String getVIN() {
+        return VIN;
+    }
+
+    public void setVIN(String VIN) {
+        this.VIN = VIN;
+    }
+
+    public double getMontantPret() {
+        return montantPret;
+    }
+
+    public void setMontantPret(double montantPret) {
+        this.montantPret = montantPret;
+    }
+
+    public int getDureePret() {
+        return dureePret;
+    }
+
+    public void setDureePret(int dureePret) {
+        this.dureePret = dureePret;
+    }
+
+    // Méthode pour valider le formulaire
+    public boolean validateForm() {
+        // Validation du champ VIN
+        if (VIN == null || VIN.length() != 17) {
+            System.out.println("Le numéro d'identification du véhicule (VIN) doit contenir exactement 17 caractères.");
+            return false;
+        }
+
+        // Validation du montant du prêt
+        if (montantPret <= 0 || montantPret > 60000) {
+            System.out.println("Le montant du prêt désiré doit être compris entre 1 et 60 000 $.");
+            return false;
+        }
+
+        // Validation de la durée du prêt
+        if (dureePret <= 0 || dureePret > 4) {
+            System.out.println("La durée du prêt doit être comprise entre 1 et 4 ans.");
+            return false;
+        }
+        return true; // Par défaut, retourne true
+    }
+}
